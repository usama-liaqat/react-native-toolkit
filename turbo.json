{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".nvmrc", ".yarnrc.yml"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "prepare": {
      "dependsOn": [],
      "outputs": ["lib/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig*.json",
        "bob.config.js",
        "*.podspec",
        "!node_modules/**",
        "!lib/**"
      ]
    },
    "build:android": {
      "dependsOn": ["^prepare"],
      "env": ["ANDROID_HOME", "ORG_GRADLE_PROJECT_newArchEnabled"],
      "inputs": [
        "package.json",
        "android",
        "!android/build",
        "src/*.ts",
        "src/*.tsx"
      ],
      "outputs": []
    },
    "build:ios": {
      "dependsOn": ["^prepare"],
      "env": [
        "RCT_NEW_ARCH_ENABLED",
        "RCT_USE_RN_DEP",
        "RCT_USE_PREBUILT_RNCORE"
      ],
      "inputs": ["package.json", "*.podspec", "ios", "src/*.ts", "src/*.tsx"],
      "outputs": []
    }
  }
}
